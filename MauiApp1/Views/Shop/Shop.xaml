<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiApp1.ViewModels"
             xmlns:components="clr-namespace:MauiApp1.Components"
             x:Class="MauiApp1.Views.Shop.Shop"
             Title="Shop"
             x:DataType="viewmodels:ShopViewModel">
    <Shell.TitleView>
        <components:NavBar NavBarTitle="Shop"
                           LocationTitle="London"/>
    </Shell.TitleView>
    <VerticalStackLayout>
        <Label 
            Text="{Binding Text}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Go menu item" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>